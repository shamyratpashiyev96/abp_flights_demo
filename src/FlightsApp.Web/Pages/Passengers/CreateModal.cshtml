@page
@using FlightsApp.Localization
@using FlightsApp.Web.Pages.Passengers
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model CreateModal
@inject IStringLocalizer<FlightsAppResource> L
@{
    Layout = null;
    string newPassenger = "NewPassenger";
}

<abp-dynamic-form abp-model="passenger" asp-page="/Passengers/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L[newPassenger].Value">
        </abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>